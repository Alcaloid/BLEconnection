<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestDatabase"
    android:id="@+id/serachBackground">

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <TextView
        android:id="@+id/text_your_que"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Que is" />

    <Button
        android:id="@+id/button_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Que" />

    <TextView
        android:id="@+id/text_current_que"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next_que" />

    <Button
        android:id="@+id/button_next_que"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart" />

</LinearLayout>